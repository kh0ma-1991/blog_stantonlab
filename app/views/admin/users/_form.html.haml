= form_for @admin_user do |f|
  - if @admin_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_user.errors.count, "error")} prohibited this admin_post from being saved:"
      %ul
        - @admin_user.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :email
    = f.email_field :email, class: 'form-control'
  .form-group
    = f.label :password
    = f.password_field :password, class: 'form-control'
  .form-group
    = f.label :role
    = f.collection_select(:role, Admin::User::ROLES, :to_s, lambda{|i| i.to_s.humanize}, {}, {class: 'form-control'})
  -#.form-group
  -#  = f.label :body
  -#  = f.text_area :body, class: 'form-control', rows: 9
  -#.form-group
  -#  = f.label :views
  -#  = f.text_field :views, class: 'form-control'
  .form-group
    = f.submit 'Save'
